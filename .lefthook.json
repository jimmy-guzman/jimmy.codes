{
  "$schema": "https://json.schemastore.org/lefthook.json",
  "commit-msg": {
    "commands": {
      "commitlint": {
        "run": "bunx commitlint --edit {1}"
      }
    }
  },
  "pre-commit": {
    "commands": {
      "case-police": {
        "run": "bunx case-police {staged_files}",
        "stage_fixed": true
      },
      "check": {
        "glob": "*.{ts,mjs,json,md,mdx,astro}",
        "run": "bunx @biomejs/biome check --write --no-errors-on-unmatched --files-ignore-unknown=true --colors=off {staged_files}",
        "stage_fixed": true
      },
      "knip": {
        "run": "KNIP=true bunx knip"
      },
      "markdownlint": {
        "glob": "*.{md,mdx}",
        "run": "bunx markdownlint --fix {staged_files}",
        "stage_fixed": true
      },
      "prettier:astro-md": {
        "glob": "*.{astro,md}",
        "run": "bunx prettier --experimental-cli --write --ignore-path .gitignore {staged_files}",
        "stage_fixed": true
      },
      "sort-package-json": {
        "glob": "package.json",
        "run": "bunx sort-package-json {staged_files}",
        "stage_fixed": true
      }
    }
  }
}
