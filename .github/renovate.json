{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "semanticCommits": "enabled",
  "reviewers": ["@jimmy-guzman"],
  "commitMessageAction": "bump",
  "commitMessagePrefix": "chore: ðŸ¤– ",
  "commitMessageTopic": "`{{depName}}`",
  "packageRules": [
    {
      "matchPackagePatterns": ["eslint"],
      "groupName": "eslint"
    },
    {
      "matchPackagePatterns": [
        "remark",
        "rehype",
        "react-markdown",
        "highlight.js",
        "gray-matter"
      ],
      "groupName": "remark"
    },
    {
      "matchPackagePatterns": ["tailwind", "autoprefixer", "postcss"],
      "groupName": "tailwindcss"
    },
    {
      "matchPackagePatterns": [
        "husky",
        "is-ci",
        "lint-staged",
        "commitlint",
        "gitzy"
      ],
      "groupName": "git hooks"
    }
  ]
}
