{
  "name": "jimmy.codes",
  "private": true,
  "type": "module",
  "scripts": {
    "astro": "astro",
    "build": "astro build",
    "build:resume": "pandoc public/resume.md -o public/resume.pdf --pdf-engine=xelatex -V geometry:margin=0.85in -V fontsize=11pt -V mainfont=\"Arial\"",
    "coverage": "vitest run --coverage",
    "dedupe": "rm -rf node_modules && rm bun.lock && bun install",
    "dev": "bunx --bun astro dev",
    "e2e": "playwright test",
    "format": "bun run format:biome && bun run format:prettier",
    "format:biome": "biome format --write .",
    "format:prettier": "prettier --experimental-cli --write \"**/*.{astro,md}\" --ignore-path .gitignore",
    "knip": "knip",
    "lint": "bun run lint:biome && bun run lint:md",
    "lint:biome": "biome lint .",
    "lint:biome:fix": "biome lint --fix .",
    "lint:fix": "bun run lint:biome:fix && bun run lint:md:fix",
    "lint:md": "markdownlint \"src/content/**/*.{md,mdx}\"",
    "lint:md:fix": "markdownlint --fix \"src/content/**/*.{md,mdx}\"",
    "prepare": "is-ci || lefthook install",
    "preview": "astro preview",
    "test": "vitest",
    "typecheck": "tsc && astro check",
    "up": "bunx npm-check-updates -ui"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.5",
    "@astrojs/mdx": "4.3.10",
    "@astrojs/rss": "4.0.13",
    "@astrojs/sitemap": "3.6.0",
    "@astrojs/vercel": "9.0.0",
    "@biomejs/biome": "2.3.4",
    "@commitlint/cli": "20.1.0",
    "@commitlint/config-conventional": "20.0.0",
    "@commitlint/types": "20.0.0",
    "@iconify-json/logos": "1.2.10",
    "@iconify-json/lucide": "1.2.72",
    "@iconify-json/simple-icons": "1.2.58",
    "@iconify/tailwind4": "1.1.0",
    "@playwright/test": "1.56.1",
    "@shikijs/colorized-brackets": "3.15.0",
    "@tailwindcss/typography": "0.5.19",
    "@tailwindcss/vite": "4.1.17",
    "@types/bun": "1.3.2",
    "@types/node": "24.10.0",
    "@types/react": "19.2.2",
    "@vitest/coverage-v8": "3.2.4",
    "astro": "5.15.4",
    "astro-expressive-code": "0.41.3",
    "astro-favicons": "3.1.5",
    "daisyui": "5.4.7",
    "expressive-code-twoslash": "0.5.3",
    "gitzy": "6.5.3",
    "hastscript": "9.0.1",
    "is-ci": "4.1.0",
    "knip": "5.68.0",
    "lefthook": "2.0.2",
    "markdownlint-cli": "0.45.0",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "0.14.1",
    "prettier-plugin-tailwindcss": "0.7.1",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-callouts": "2.1.2",
    "rehype-external-links": "3.0.0",
    "rehype-slug": "6.0.0",
    "rehype-unwrap-images": "1.0.0",
    "tailwindcss": "4.1.17",
    "typescript": "5.9.3",
    "vitest": "3.2.4"
  },
  "packageManager": "bun@1.3.2",
  "gitzy": {
    "useCommitlintConfig": true
  },
  "trustedDependencies": [
    "@tailwindcss/oxide",
    "esbuild",
    "lefthook",
    "sharp"
  ]
}
