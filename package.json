{
  "name": "jimmy.codes",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "build": "next build",
    "lint": "eslint . --cache",
    "lint:fix": "eslint . --cache --fix",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "deps:update": "pnpm dlx npm-check-updates -ui",
    "prepare": "is-ci || husky install"
  },
  "gitzy": {
    "useCommitlintConfig": true
  },
  "lint-staged": {
    "*.{md,json,yml,js,cjs,mjs,ts,tsx}": [
      "prettier -w"
    ],
    "*.{js,cjs,mjs,ts,tsx}": [
      "eslint --cache"
    ]
  },
  "dependencies": {
    "@heroicons/react": "2.0.18",
    "@icons-pack/react-simple-icons": "9.1.0",
    "@napi-rs/simple-git": "0.1.9",
    "clsx": "2.0.0",
    "fathom-client": "3.6.0",
    "gray-matter": "4.0.3",
    "highlight.js": "11.9.0",
    "next": "14.0.4",
    "react": "18.2.0",
    "react-cool-dimensions": "3.0.1",
    "react-dom": "18.2.0",
    "react-markdown": "9.0.0",
    "rehype-autolink-headings": "7.0.0",
    "rehype-external-links": "3.0.0",
    "rehype-highlight": "7.0.0",
    "rehype-slug": "6.0.0",
    "remark-unwrap-images": "4.0.0",
    "sharp": "0.32.6"
  },
  "devDependencies": {
    "@comparto/prettier-config": "1.2.0",
    "@next/eslint-plugin-next": "14.0.4",
    "@tailwindcss/typography": "0.5.10",
    "@testing-library/cypress": "10.0.1",
    "@types/node": "20.8.10",
    "@types/react": "18.2.34",
    "autoprefixer": "10.4.16",
    "commitlint": "17.8.1",
    "cypress": "13.4.0",
    "eslint": "8.52.0",
    "eslint-config-jimmy-guzman": "10.1.0",
    "gitzy": "4.0.0",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "jest": "29.7.0",
    "lint-staged": "15.0.2",
    "postcss": "8.4.31",
    "prettier": "3.0.3",
    "prettier-plugin-tailwindcss": "0.5.6",
    "tailwindcss": "3.3.5",
    "typescript": "5.2.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "eslint-config-jimmy-guzman>typescript": "5.2.2"
      }
    }
  },
  "packageManager": "pnpm@8.10.2",
  "engines": {
    "node": "18"
  }
}
