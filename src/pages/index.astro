---
import { pages } from "../configs/pages";
import { techDaily, techLearning, techLove, titles } from "../configs/tech";
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="jimmy.codes"
  description="Lead Engineer specializing in high-performance, scalable systems and developer experience. Passionate about mentorship, technical strategy, and modern software architecture."
  keywords={[
    "jimmy guzman",
    "lead engineer",
    "software engineer",
    "typescript",
    "react",
    "nextjs",
    "astro",
    "scalable systems",
    "developer experience",
    "engineering leadership",
    "mentorship",
    "technical strategy",
    "frontend",
    "backend",
    "distributed systems",
  ]}
>
  <main class="mx-auto w-full max-w-3xl px-4 py-8 space-y-6 prose">
    <section class="space-y-6">
      <h1>
        {pages.home.title}
      </h1>
      <p>
        I design <strong>high-performance, scalable systems</strong> and improve
        <strong>developer experience</strong> at scale. Passionate about
        <strong
          >mentorship, technical strategy, and guiding engineering teams</strong
        >
        to drive business impact through <strong
          >modern software architecture</strong
        >.
      </p>
    </section>

    <section class="space-y-4">
      <p>
        <span>{titles.love}:</span>
        {
          techLove.map((tech, index) => (
            <>
              <a
                href={tech.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 link link-hover"
              >
                <span class:list={[tech.icon, "hidden sm:inline h-4 w-5]"]} />
                {tech.title}
              </a>
              {index < techLove.length - 1 && (
                <span class="align-top"> • </span>
              )}
            </>
          ))
        }
      </p>

      <p>
        <span>{titles.daily}:</span>
        {
          techDaily.map((tech, index) => (
            <>
              <a
                href={tech.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 link-hover"
              >
                <span class:list={[tech.icon, "hidden sm:inline h-4 w-5]"]} />
                {tech.title}
              </a>
              {index < techDaily.length - 1 && (
                <span class="align-top"> • </span>
              )}
            </>
          ))
        }
      </p>

      <p>
        <span>{titles.learning}:</span>
        {
          techLearning.map((tech, index) => (
            <>
              <a
                href={tech.link}
                target="_blank"
                rel="noopener noreferrer"
                class="inline-flex items-center gap-1 link-hover"
              >
                <span class:list={[tech.icon, "hidden sm:inline h-4 w-5]"]} />
                {tech.title}
              </a>
              {index < techLearning.length - 1 && (
                <span class="align-top"> • </span>
              )}
            </>
          ))
        }
      </p>
    </section>

    <section class="space-y-6">
      <p>
        Find me on <a
          href="https://github.com/jimmy-guzman"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1"
        >
          <span class="icon-[logos--github-octocat] hidden sm:inline h-4 w-4"
          ></span>GitHub</a
        > and <a
          href="https://www.linkedin.com/in/jimmy-guzman-moreno"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-1"
          ><span class="icon-[logos--linkedin-icon] hidden sm:inline h-4 w-4"
          ></span>LinkedIn</a
        >.
      </p>

      <p>
        Or email me at <a href="mailto:hi@jimmy.codes" class="transition-colors"
          >hi@jimmy.codes</a
        >.
      </p>

      <p>
        Read my <a href="/blog">blog</a>, learn more <a href="/about">about</a> me,
        or take a look at my <a href="/resume.pdf" download>resume</a>.
      </p>
    </section>
  </main>
</Layout>
