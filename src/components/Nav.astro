---
import Logo from "./Logo.astro";
import ThemeController from "./ThemeController.astro";
---

<nav class="navbar">
  <div class="navbar-start flex items-center gap-2">
    <a href="/" class="btn btn-ghost btn-sm xl:btn-md gap-2 p-1 sm:p-2">
      <Logo className="h-6 w-6 sm:h-5 sm:w-5" />
      <span class="sr-only sm:not-sr-only text-sm">jimmy.codes</span>
    </a>
  </div>

  <div class="navbar-center hidden md:flex">
    <ul class="menu menu-horizontal gap-1">
      <li>
        <a href="/" class="btn btn-ghost btn-sm xl:btn-md px-2 py-1 gap-1">
          <span class="sr-only md:not-sr-only">Home</span>
          <span class="icon-[lucide--home] h-4 w-4"></span>
        </a>
      </li>
      <li>
        <a href="/about" class="btn btn-ghost btn-sm xl:btn-md px-2 py-1 gap-1">
          <span class="sr-only md:not-sr-only">About</span>
          <span class="icon-[lucide--user] h-4 w-4"></span>
        </a>
      </li>
      <li>
        <a href="/blog" class="btn btn-ghost btn-sm xl:btn-md px-2 py-1 gap-1">
          <span class="sr-only md:not-sr-only">Blog</span>
          <span class="icon-[lucide--file-text] h-4 w-4"></span>
        </a>
      </li>
    </ul>
  </div>

  <div class="navbar-end">
    <div class="flex items-center gap-4 sm:gap-3">
      <div class="flex items-center gap-2">
        <a
          href="mailto:hi@jimmy.codes"
          target="_blank"
          rel="noopener noreferrer"
          class="btn btn-sm xl:btn-md btn-ghost btn-circle"
        >
          <span class="sr-only">Email</span>
          <span class="icon-[lucide--mail] h-5 w-5 sm:h-4 sm:w-4"></span>
        </a>

        <div class="hidden sm:flex items-center gap-2">
          <a
            href="/resume.pdf"
            download
            class="btn btn-sm xl:btn-md btn-ghost btn-circle"
          >
            <span class="sr-only">Resume</span>
            <span class="icon-[mdi--resume] h-4 w-4"></span>
          </a>
          <a
            href="https://github.com/jimmy-guzman"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-sm xl:btn-md btn-ghost btn-circle"
          >
            <span class="sr-only">GitHub</span>
            <span class="icon-[simple-icons--github] h-4 w-4"></span>
          </a>
          <a
            href="https://www.linkedin.com/in/jimmy-guzman-moreno"
            target="_blank"
            rel="noopener noreferrer"
            class="btn btn-sm xl:btn-md btn-ghost btn-circle"
          >
            <span class="sr-only">LinkedIn</span>
            <span class="icon-[simple-icons--linkedin] h-4 w-4"></span>
          </a>
          <a href="/rss.xml" class="btn btn-sm xl:btn-md btn-ghost btn-circle">
            <span class="sr-only">RSS</span>
            <span class="icon-[lucide--rss] h-4 w-4"></span>
          </a>
        </div>
      </div>

      <ThemeController />

      <div class="dropdown dropdown-end sm:hidden">
        <div tabindex="0" role="button" class="btn btn-sm btn-ghost btn-circle">
          <span class="sr-only">Menu</span>
          <span class="icon-[lucide--menu] h-5 w-5"></span>
        </div>
        <ul
          tabindex="0"
          class="dropdown-content menu bg-base-100 rounded-box z-[1] w-48 shadow text-sm"
        >
          <li>
            <a href="/">
              <span class="icon-[lucide--home] h-4 w-4"></span>
              Home
            </a>
          </li>

          <li>
            <a href="/about">
              <span class="icon-[lucide--user] h-4 w-4"></span>
              About
            </a>
          </li>
          <li>
            <a href="/blog">
              <span class="icon-[lucide--file-text] h-4 w-4"></span>
              Blog
            </a>
          </li>
          <li>
            <a href="/resume.pdf" download>
              <span class="icon-[mdi--resume] h-4 w-4"></span>
              Resume
            </a>
          </li>
          <li>
            <a
              href="https://github.com/jimmy-guzman"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="icon-[simple-icons--github] h-4 w-4"></span>
              GitHub
            </a>
          </li>
          <li>
            <a
              href="https://www.linkedin.com/in/jimmy-guzman-moreno"
              target="_blank"
              rel="noopener noreferrer"
            >
              <span class="icon-[simple-icons--linkedin] h-4 w-4"></span>
              LinkedIn
            </a>
          </li>
          <li>
            <a href="/rss.xml">
              <span class="icon-[lucide--rss] h-4 w-4"></span>
              RSS
            </a>
          </li>
        </ul>
      </div>
    </div>
  </div>
</nav>
