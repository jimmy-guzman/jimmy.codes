---
interface Props {
  heading: string;
}

const { heading } = Astro.props;
---

<main
  class="mx-auto prose w-full max-w-3xl flex-1 items-start space-y-6 px-4 py-12 [view-transition-name:main] xl:prose-lg prose-a:hover:no-underline"
  aria-labelledby="page-title"
>
  <h1 class="[view-transition-name:title]" id="page-title">
    {heading}
  </h1>
  <slot />
</main>
