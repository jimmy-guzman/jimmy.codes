---
import { Font } from "astro:assets";
import { FATHOM_SITE_ID } from "astro:env/client";

import Footer from "@/components/Footer.astro";
import Nav from "@/components/Nav.astro";
import Seo from "@/components/Seo.astro";
import ThemeScript from "@/components/ThemeScript.astro";

import "@/styles/global.css";

interface Props {
  title: string;
  description?: string;
  keywords?: readonly string[];
  noIndex?: boolean;
  extraLd?: unknown[];
}

const { title, description, keywords, noIndex, extraLd = [] } = Astro.props;

const canonical = Astro.url.href.replace(/\/$/, "");
const siteUrl = "https://www.jimmy.codes";

const jsonLd = JSON.stringify({
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "WebSite",
      "@id": `${siteUrl}/#website`,
      url: siteUrl,
      name: "Jimmy Guzman Moreno's blogfolio",
      description:
        "Jimmy Guzman Moreno's blogfolio â€” exploring software engineering, scalable systems, and developer experience.",
      publisher: { "@id": `${siteUrl}/#person` },
      inLanguage: "en",
    },
    {
      "@type": "Person",
      "@id": `${siteUrl}/#person`,
      name: "Jimmy Guzman Moreno",
      url: siteUrl,
      sameAs: [
        "https://github.com/jimmy-guzman",
        "https://www.linkedin.com/in/jimmyguzmanmoreno",
      ],
    },
    {
      "@type": "WebPage",
      "@id": `${canonical}#webpage`,
      url: canonical,
      name: title,
      isPartOf: { "@id": `${siteUrl}/#website` },
      inLanguage: "en",
      ...(description ? { description: description } : {}),
    },
    ...extraLd,
  ],
});
---

<!doctype html>
<html lang="en" class="scroll-smooth motion-reduce:scroll-auto">
  <head>
    <Seo
      title={title}
      description={description}
      keywords={keywords}
      noIndex={noIndex}
    />

    <ThemeScript />

    <link rel="sitemap" href="/sitemap-index.xml" />

    <meta name="generator" content={Astro.generator} />

    <script
      is:inline
      src="https://cdn.usefathom.com/script.js"
      data-site={FATHOM_SITE_ID}
      defer></script>

    <Font cssVariable="--font-satoshi" preload />

    <style>
      html {
        font-family: var(--font-satoshi), system-ui, sans-serif;
      }
    </style>

    <script type="application/ld+json" is:inline set:html={jsonLd} />
  </head>
  <body class="flex min-h-dvh flex-col justify-between px-4" tabindex="-1">
    <Nav />
    <slot />
    <Footer />
  </body>
</html>
